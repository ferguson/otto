# . dist/python/bin/activate
ROOT="`pwd`"
PATH=$ROOT/bin:$PATH
PS1="(otto) $PS1"
export DYLD_FALLBACK_LIBRARY_PATH=$ROOT/dist/mpd/lib:${DYLD_LIBRARY_PATH}
export LD_LIBRARY_PATH=$ROOT/dist/mpd/lib:${LD_LIBRARY_PATH}
export MANPATH=$ROOT/dist/python/share/man:$ROOT/dist/node/share/man:${MANPATH}
export PYTHONPATH=$ROOT/dist/python
export N_PREFIX=$ROOT/dist/node
export OTTO_ACTIVATE=$ROOT

if [ ! -e dist/python ]; then
    echo "the development environment hasn't been setup yet"
    echo
    read -p "set up the development environment in $OTTO_ROOT [y]? "
    case $yn in
	[yY]|yes|Yes|YES )
            ./scripts/devsetup -y
            ;;
    esac
fi

